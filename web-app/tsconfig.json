{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}